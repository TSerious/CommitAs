<UserControl
    x:Class="CommitAs.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:CommitAs.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="using:CommitAs.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:CommitAs.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <StackPanel>
        <ui:FAComboBox
            x:Name="UserName"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            IsEditable="True"
            IsTextSearchEnabled="True"
            ItemsSource="{Binding Users}"
            Text="{Binding CurrentUser, Converter={x:Static conv:UserConverters.UserName}, Mode=OneWay}">
            <ui:FAComboBox.ItemTemplate>
                <DataTemplate x:DataType="m:User">
                    <TextBlock Text="{Binding ., Converter={x:Static conv:UserConverters.UserName}}" />
                </DataTemplate>
            </ui:FAComboBox.ItemTemplate>
        </ui:FAComboBox>
        <TextBox Height="50" />
    </StackPanel>
</UserControl>
